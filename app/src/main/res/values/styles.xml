        <item name="colorPrimary">@color/colorPrimary_pg</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_pg</item>
        <item name="colorAccent">@color/colorAccent_pg</item>
        <item name="colorSecondary">@color/colorSecondary_pg</item>
