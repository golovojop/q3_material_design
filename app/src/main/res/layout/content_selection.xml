<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_content_selection"
        tools:context=".ui.lesson4.ContentSelectionActivity">


    <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuFrame"
            android:layout_gravity="center"
            android:layout_width="256dp"
            android:layout_height="256dp"
            card_view:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/menuPic"
                    android:layout_width="match_parent"
                       android:layout_height="192dp"
                       android:scaleType="centerCrop"
                       android:src="@drawable/vegetables"/>

            <TextView
                    android:id="@+id/menuCategory"
                    android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:textSize="24sp"
                      android:text="@string/simple_text"
                      tools:text="@string/simple_text"
                      android:textStyle="bold|italic"
                      android:textColor="?attr/colorPrimary"
                      android:fontFamily="@font/rochester"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>