    <!-- Lesson4 NavigationDrawer style -->
    <style name="AppThemeL4" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_l4</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_l4</item>
        <item name="colorAccent">@color/colorAccent_l4</item>
        <item name="colorSecondary">@color/colorSecondary_l4</item>
