        <item name="colorAccent">@color/colorAccent_dob</item>
        <item name="colorSecondary">@color/colorSecondary_dob</item>
        <item name="colorOnSecondary">@color/colorOnSecondary_dob</item>

    </style>
    <style name="AppThemeDob.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeDob.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppThemeDob.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

